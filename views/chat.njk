{%extends 'layout.njk'%}

{%block content%}
    <div class="chat-container">
        <div class="chat-header">
            <!-- 用户名 -->
            {{nickName}}
        </div>

        <div class="chat-content">
            <!-- 聊天主体 -->
            {%for item in contents%}
                <div class="chat-content-container">
                    <div class="chat-detail clearFix">
                        <div class="chat-detail-left">
                            <img src="{{item.avatar}}" style="width:45px; height:45px; border-radius:50%">
                            <div class="chat-name">{{item.nickName}}</div>
                        </div>
                        <div class="chat-detail-right">
                            {{item.content}}
                        </div>
                    </div>
                     <div class="chat-time">
                    {{item.createdAt | formatTime}}
                    {# {{item.createdAt}} #}
                </div>

                
                </div>
               

                {%endfor%}
            </div>
                <div class="newTips"></div>

            <div class="chat-input-container">
                {# 输入部分 #}
                <i class="fa fa-smile-o fa-3x chat-input-smile"></i>
                <input placeholder="信息输入......" class="chat-input">
            </div>
        </div>

        {%endblock%}

        {%block style%}
            <link rel='stylesheet' href='/css/chat.css'>

            {%endblock%}

            {%block script%}
                <script src="/js/chat.js"></script>
                {%endblock%}